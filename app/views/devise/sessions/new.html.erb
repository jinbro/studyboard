<!-- Login Pannel -->
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="well" style="margin-top : 70px;">
      
      <center><h2>로그인</h2></center>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label "아이디", :style => "margin-top : 10px;" %><br />
        <%= f.email_field :email, autofocus: true, :class => "form-control", :required => true %>
      </div>
    
      <div class="field">
        <%= f.label "비밀번호", :style => "margin-top : 10px;" %><br />
        <%= f.password_field :password, autocomplete: "off", :class => "form-control", :required => true  %>
      </div>
    
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div class="actions">
            <%= f.submit "로그인", :class => "form-control", :style => "margin-top : 20px;" %>
          </div>
        </div>
      </div>
      <% end %>
      
    </div>  
  </div>
</div>


